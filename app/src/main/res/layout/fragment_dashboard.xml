<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vvahe.aramis2is70.DashboardFragment">

    <!-- User profile picture -->
    <!-- TODO: retrieve from Firebase -->
    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/loggedInText"
        app:srcCompat="@drawable/profilepic"
        android:onClick="toProfileSettings"
        android:clickable="true"/>

    <!-- "Logged in as:" -->
    <TextView
        android:id="@+id/loggedInText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Logged in as:"
        android:textColor="#828282"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/userName"
        app:layout_constraintLeft_toRightOf="@id/profilePicture" />

    <!-- User name -->
    <!-- TODO: retrieve from Firebase -->
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:text="Fredje Teeven"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/primary_text_dark"
        android:textSize="36sp"
        app:layout_constraintLeft_toRightOf="@id/profilePicture"
        app:layout_constraintTop_toBottomOf="@id/loggedInText"
        app:layout_constraintTop_toTopOf="@id/profilePicture"
        app:layout_constraintBottom_toBottomOf="@id/profilePicture"
        android:onClick="toProfileSettings"
        android:clickable="true"/>

    <!-- Separator line 1 -->
    <View
        android:id="@+id/separator1"
        android:layout_width="220dp"
        android:layout_height="1dp"
        android:layout_below="@+id/userMajor"
        android:layout_marginEnd="16dp"
        android:background="#c0c0c0"
        app:layout_constraintLeft_toRightOf="@id/profilePicture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userName"/>

    <!-- Major of student, to be pulled from Firebase
    TODO: retrieve from Firebase -->
    <TextView
        android:id="@id/userMajor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="6dp"

        android:textColor="#828282"
        app:layout_constraintTop_toBottomOf="@id/separator1"
        app:layout_constraintLeft_toRightOf="@id/profilePicture"
        android:text="Buschauffeur"
        android:onClick="toProfileSettings"
        android:clickable="true"/>




    <!-- "Select current course" -->
    <TextView
        android:id="@+id/selCurCourseTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Select current course"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"

        app:layout_constraintTop_toBottomOf="@id/profilePicture"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <!-- Separator line 2 -->
    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/selCurCourseTxt"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/separator2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radioButton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/separator2"/>
            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"/>
            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"/>
            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"/>
        </RadioGroup>



    <TextView
        android:id="@+id/course1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="DZC30"
        android:textColor="#000000"
        android:gravity="center|center"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/radioButton"
        app:layout_constraintBottom_toBottomOf="@id/radioButton"
        app:layout_constraintStart_toEndOf="@+id/radioButton"
        app:layout_constraintBottom_toTopOf="@id/course2"/>

    <ImageView
        android:id="@+id/course1info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:tint="#ababab"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator2"
        app:srcCompat="@android:drawable/ic_menu_info_details"/>


    <TextView
        android:id="@+id/course2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="2IS70 App Development"
        android:textColor="#000000"
        android:gravity="center|left"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/course1"/>

    <ImageView
        android:id="@+id/course2info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:tint="#ababab"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course1info"
        app:srcCompat="@android:drawable/ic_menu_info_details"/>


    <TextView
        android:id="@+id/course3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="2IT60 Logic and set Theory"
        android:textColor="#000000"
        android:gravity="center|left"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/course2"/>

    <ImageView
        android:id="@+id/course3info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:tint="#ababab"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course2info"
        app:srcCompat="@android:drawable/ic_menu_info_details"/>


    <TextView
        android:id="@+id/course4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="I don't care, just want to study"
        android:textColor="#000000"
        android:gravity="center|left"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/course3"/>

    <ImageView
        android:id="@+id/course4info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:tint="#ababab"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course3info"
        app:srcCompat="@android:drawable/ic_menu_info_details"/>

    </LinearLayout>

    <!-- Privacy settings -->
    <TextView
        android:id="@+id/privacyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Privacy settings"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/course4"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <!-- Separator line 3 -->
    <View
        android:id="@+id/separator3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@+id/privacyTxt"/>

    <TextView
        android:id="@+id/availabilityTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="18dp"
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator3"
        android:text="Availability" />

    <Switch
        android:id="@+id/availabilitySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/availabilityTxt"
        app:layout_constraintBottom_toBottomOf="@id/availabilityTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator3" />

    <TextView
        android:id="@+id/mapTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="18dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="Show on map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/availabilityTxt"/>

    <Switch
        android:id="@+id/mapSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/mapTxt"
        app:layout_constraintBottom_toBottomOf="@id/mapTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/availabilitySwitch" />







</android.support.constraint.ConstraintLayout>