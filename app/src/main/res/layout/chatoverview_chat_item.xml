<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatInstance"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatThumbnail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp"
        android:src="@mipmap/default_user_pic_hdpi" />

    <TextView
        android:id="@+id/userNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chatThumbnail"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/chatThumbnail"
        android:text="TextView" />

    <TextView
        android:id="@+id/lastMessageTxt"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/userNameTxt"
        android:layout_below="@+id/userNameTxt"
        android:layout_marginTop="11dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/courseTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/userNameTxt"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

</RelativeLayout>